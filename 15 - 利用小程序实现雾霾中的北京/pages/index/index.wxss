@import "../../app.wxss";
page {
  height: 100%;
  background-color: lightseagreen;
}
.wrap {
  display: table;
  width: 100%;
  height: 100%;
}
/*首页*/
.index-con {
  display: table-cell;
  text-align: center;
  vertical-align: middle;
}
.index-tit {
  color: mediumvioletred;
  font-size: 60rpx;
  font-weight: bold;
  transform: translate(0, -1000px);
}
.index-btn {
  width: 240rpx;
  margin: 200rpx auto 0;
  padding: 5rpx;
  border: 2rpx solid gray;
  background-color: deepskyblue; 
  font-size: 50rpx;
  font-weight: bold;
  transform: translate(0, 1000px);
}
/*游戏操作界面*/
.game-con {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 720rpx;
  height: 720rpx;
  margin: auto;
}
.game-list {
  float: left;
  border: 2rpx solid gray;
  background: pink;
  box-sizing: border-box;
}
.game-score,
.game-time {
  float: left;
  width: 50%;
  padding-top: 80rpx;
  color: ghostwhite;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
}
.game-result {
  display: table-cell;
  height: 100%;
  text-align: center;
  vertical-align: middle;
}
/*游戏结束页面*/
.result-tit {
  color: mediumvioletred;
  font-size: 80rpx;
  font-weight: bold;
}
.result-con {
  margin-top: 30rpx;
  color: white;
  font-size: 40rpx;
}
.game-again {
  width: 240rpx;
  margin: 80rpx auto 0;
  padding: 5rpx;
  border: 2rpx solid gray;
  background-color: deepskyblue; 
  font-size: 50rpx;
  font-weight: bold;
}